CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_psg1218=y

# LuCI Web界面
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-lib-fs=y

# 网络加速 Turbo ACC
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_BBR_CCA=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_FLOW_OFFLOAD=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_SHORTCUT_FE=y

# TUN 驱动支持
CONFIG_PACKAGE_kmod-tun=y

# TinyProxy 服务
CONFIG_PACKAGE_tinyproxy=y
CONFIG_PACKAGE_luci-app-tinyproxy=y

# curl 命令行工具
CONFIG_PACKAGE_curl=y

# 可选 LuCI 插件（保留 UPnP）
CONFIG_PACKAGE_luci-app-upnp=y
